

<% @comments.each do |comment| %>
<div class="ListingWrapper">

    <div class="label">
        <%# Not ideal, refactor calling user name for less DB calls. %>
        <%= "#{User.find(comment.user_id).name}" %>
         <p>
         <%= link_to "Delete", [comment.listing, comment], method: :delete, data: {confirm: "Are you sure?"} if current_user.id == @listing.seller_id %>
        </p>
    </div>

    <div class="input">
        <%= comment.body %>
    </div>
   
</div>
<% end %>

